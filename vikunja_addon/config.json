{
  "name": "Vikunja",
  "version": "0.24.6",
  "slug": "vikunja",
  "description": "Vikunja — менеджер задач, интегрированный в Home Assistant через Ingress",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "panel_icon": "mdi:format-list-checkbox",
  "panel_title": "Vikunja",
  "ports": { "3456/tcp": 8091 },
  "map": ["ssl", "data:rw"],
  "options": {
    "db_user": "vikunja",
    "db_password": "supersecret",
    "db_name": "vikunja",
    "public_url": "http://<the public ip or host where Vikunja is reachable>",
    "jwt_secret": "<a super secure random secret>",
    "allow_register": true
  },
  "schema": {
    "db_user": "str",
    "db_password": "str",
    "db_name": "str",
    "public_url": "str",
    "jwt_secret": "str",
    "allow_register": "bool"
  },
  "services": ["mysql:need"],
  "build_from": {
    "amd64": "ghcr.io/home-assistant/amd64-base:latest",
    "aarch64": "ghcr.io/home-assistant/aarch64-base:latest",
    "armv7": "ghcr.io/home-assistant/armv7-base:latest"
  }
}
